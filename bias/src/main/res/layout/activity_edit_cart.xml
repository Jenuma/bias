<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="io.whitegoldlabs.bias.features.EditCartActivity"
    >

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/toolbar"
        >

        <Button
            style="@style/ButtonTheme"
            android:text="Add Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/btnAddItem"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/editItem"
            android:onClick="addItem"
        />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editItem"
            android:maxLines="1"
            android:hint="Item"
            android:imeOptions="actionDone"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/frameShoppingListFragmentContainer"
            android:layout_alignParentTop="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/btnAddItem"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnAddItem"
            android:id="@+id/frameShoppingListFragmentContainer"
            android:layout_alignParentBottom="true"
        >

        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>